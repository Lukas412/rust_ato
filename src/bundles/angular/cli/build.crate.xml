<?xml version="1.0" encoding="UTF-8" ?>

<crate:definition xmlns:crate="http://www.ato.net/xmlns/file/crate"
                  xmlns:action="http://www.ato.net/xmlns/action"
                  xmlns:action_location="http://www.ato.net/xmlns/action/location"
                  xmlns:path="http://www.ato.net/xmlns/element/path"
                  xmlns:string="http://www.ato.net/xmlns/element/string"
                  namespace="angular::cli::build">

  <parameters>
    <string:parameter name="flags" namespace="angular::cli::build::*"/>
  </parameters>
  <action_location:change>
    <path:get_argument namespace="angular::project" name="name"/>
    <action:reference namespace="ato::command::invoke">
      <argument name="command">
        <string:value>ng build</string:value>
      </argument>
      <argument name="flags">
        <string:get_argument namespace="angular::cli::build" name="flags"/>
      </argument>
    </action:reference>
  </action_location:change>
</crate:definition>